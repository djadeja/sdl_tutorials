{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "-g",
                "${workspaceFolder}/*.cpp",
                "-F/Users/divyarajsinhjadeja/Library/Frameworks",
                "-framework",
                "SDL2",
                "-rpath",
                "/Users/divyarajsinhjadeja/Library/Frameworks",
                "-o",
                "${fileDirname}/App"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}